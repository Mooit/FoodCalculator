<head>
<title>Ingredient Database</title>
</head>

<h1>Ingredient Database</h1>

<%= link_to 'Click here to add an ingredient to the database', new_ingredient_path %>
<br/>
<br/>
<%= link_to 'Back', controller: 'food_calc' %>
<br/>
<br/>
<table>
  <tr>
    <th>Name</th>
    <th>Average Serving Size (g)</th>
    <th>Calories</th>
    <th>Total fat (g)</th>
    <th>Cholesterol (mg)</th>
    <th>Sodium (mg)</th>
    <th>Potassium (mg)</th>
    <th>Total Carbohydrates (mg)</th>
    <th>Dietary Fibre (g)</th>
    <th>Sugars (g)</th>
    <th>Protein (g)</th>
    <th colspan="3"></th>
  </tr>
  
  <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.avgSize %></td>
        <td><%= ingredient.calories %></td>
        <td><%= ingredient.toFat %></td>
        <td><%= ingredient.chol %></td>
        <td><%= ingredient.sod %></td>
        <td><%= ingredient.pot %></td>
        <td><%= ingredient.totalCarbs %></td>
        <td><%= ingredient.diFi %></td>
        <td><%= ingredient.sugs %></td>
        <td><%= ingredient.pro %></td>
        <td><%= link_to 'Show', ingredient_path(ingredient) %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
